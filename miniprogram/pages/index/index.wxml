<button open-type="getUserInfo" bindgetuserinfo="callback">授权用户信息</button>
  
<view  bindtap="bindViewTap" class="userinfo">
  <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
  <view class="userinfo-text">
    <text class="userinfo-nickname">{{userInfo.nickName}}\n</text>
    <text class="userinfo-welcome">尊敬的vip用户您好</text>
  </view>   
</view>

<view>
  <view class="style_1"></view>
  <view class="style_2">学校：<text>{{studentInfo.sName}}</text></view>
  <view class="style_3">学院：<text>{{studentInfo.aName}}</text></view>
  <view class="style_2">专业：<text>{{studentInfo.mName}}</text></view>
  <view class="style_3">年级：<text>{{studentInfo.gName}}</text></view>
  <view class="style_1"></view>
  <button type="primary" class="changeInfo" bindtap="btnChange">修改资料</button>
</view>
<view>
<button type="primary" class="changeInfo" bindtap="mChange">消息</button>
</view>

<view class="userFunction">
  <image bindtap="btnShopping" class="shopping" style="width: {{imagewidth}}*2rpx; height: {{imageheight}}px;" src="/imagess/shopping.png" bindload="imageLoad"></image>
  <image bindtap="btnMessage" class="messageBoard" style="width: {{imagewidth}}*2rpx; height: {{imageheight}}px;" src="/imagess/messageBoard.png" bindload="imageLoad"></image>

</view>
