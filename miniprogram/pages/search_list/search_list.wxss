/* Pages/list/list.wxss */
.content {
  width: 100%;
  height: 100%;
  background: transparent;
}
.searcharea{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 65rpx;
  background-color:white;
  margin-top: 10rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-bottom: 20rpx;
}
.liststyle_buttom{
  height: 65rpx;
  width: 680rpx;
  background-color:white;
  margin-left: 15rpx;
  display: flex;
  flex-direction: row;
}
.liststyle_buttom image{
  margin-left: 20rpx;
  margin-right: 15rpx;
}

.cold{
  color: rgb(212, 221, 245);
}
.list_book{
  margin-top: 5rpx;
  height: 80vh;
  display: flex;
  justify-content: space-around;
  align-content: center;
}
.homeworkzoo{
  width: 700rpx;
  height:90vh;
}
.bookzoo{
  width: 700rpx;
  height: 17vh;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.hwrow{
  height: 15vh;
  width: 700rpx;
  background: white;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}
.hwpicture{
  margin: 10rpx;
}
.hwtext{
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.hwsub{
  font-size: 30rpx;
  color: black;
}
.hwnum{
  font-size: 22rpx;
  height: 3vh;
  color: gray;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.student{
  color: black;
  padding:30rpx 0 30rpx 40rpx;
}
.page-top{
  height: 100%;
  width: 750rpx;
  position: fixed;
  background: rgb(249, 249, 249);
  z-index: 0;
  transition: All 0.4s ease;
}
.text{
  margin: auto;
  margin-top: 10rpx;
  margin-left: 100rpx;
  vertical-align: middle;
  color: black;
}
.list-msg {
  padding: 0 20rpx;
  background-color: #fff;    
  position: relative;
}